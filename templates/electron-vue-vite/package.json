{
  "name": "app-name",
  "private": false,
  "author": "author-name",
  "description": "description",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none ELECTRON=true npm run dev\" \"npm run electron \"",
    "package": "cross-env ELECTRON=true vite build && electron-packager ./ app-name --platform=win32 --arch=x64 --overwrite --asar --prune",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "electron:prod": "npm build:for:electron && electron ."
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "@popperjs/core": "^2.11.5",
    "pinia": "^2.0.14",
    "vue": "^3.2.25"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^19.0.1",
    "electron-packager": "^15.5.1",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "vite": "^2.9.9",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "app-name",
    "productName": "app-name",
    "copyright": "Copyright Â© 2019 ${author}",
    "target": "NSIS",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
